.login
    form(action="GET")
        .login__form
            .login__row
                .section-title.section-title_login Авторизуйтесь
            .login__row
                .login__icon-container
                    svg.login__icon(width='15' height='17')
                        use(xlink:href=`images/sprite/mySprite.min.svg#login`)
                input(id="login" name="login" type="login" placeholder='Логин').login__input
                .login__pop-up Введите логин
            .login__row 
                .login__icon-container             
                    svg.login__icon(width='18' height='17')
                        use(xlink:href=`images/sprite/mySprite.min.svg#password`)
                input(id="password" name="password" type="password" placeholder='Пароль').login__input
                .login__pop-up Введите пароль
            .login__row
                label.login_label(for="ishuman")
                    input(type="checkbox" checked id="ishuman" name="ishuman").login__input-checkbox
                    .login__checkbox-fake
                        svg(width='10' height='10').login__checkbox-fake-svg
                            use(xlink:href=`images/sprite/mySprite.min.svg#check`)
                    .login__text Я человек
            .login__row
                .login__text Вы точно не робот?
            .login__row
                label.login_label(for="notrobot-yes")
                    input(id="notrobot-yes" type="radio" name ='notrobot' value='yes').login__input-radio
                    .login__radio-fake
                    .login__text Да 
                label.login_label(for="notrobot-no")
                    input(id="notrobot-no" type="radio" name ='notrobot' value='no' checked).login__input-radio
                    .login__radio-fake
                    .login__text Не уверен
        .login__form-btns
            button(type='button').resume.green-btn-style На главную
            input(type="submit" value="Войти")#login-btn.login__input-submit.green-btn-style
